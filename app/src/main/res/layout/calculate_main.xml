<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enterDeposit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:hint="Размер вклада"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/enterPercents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Размер процентной ставки"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Результат"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listViewCapitalization"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:gravity="center"
            android:onClick="listPickCapitalization"
            android:text="@string/capitalization" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/spinner_background"
            android:gravity="center"
            android:text="Доср.\nзакрытие" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/spinner_background"
            android:gravity="center"
            android:text="Пополн/\nизъятие" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/listViewCurrency"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:gravity="center"
            android:hint="Список\nвалют"
            android:onClick="listPickCurrency">

        </TextView>

        <TextView
            android:id="@+id/date1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:gravity="center"
            android:hint="Дата\nначала\nвклада"
            android:onClick="dataPick" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:gravity="center"
            android:hint="Дата\nокончания\nвклада"
            android:onClick="dataPick" />

        <TextView
            android:id="@+id/data_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/design_default_color_background"
            android:gravity="center"
            android:hint="Количество\nдней" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button7"
            android:onClick="onButtonsClick"
            android:text="7"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button8"
            android:onClick="onButtonsClick"
            android:text="8"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button9"
            android:onClick="onButtonsClick"
            android:text="9"
            android:textSize="18sp" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_clear"
            android:onClick="onButtonsClick"
            android:text="С"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button4"
            android:onClick="onButtonsClick"
            android:text="4"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button5"
            android:onClick="onButtonsClick"
            android:text="5"
            android:textColor="#00FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button6"
            android:onClick="onButtonsClick"
            android:text="6"
            android:textSize="18sp" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_back"
            android:onClick="onButtonsClick"
            android:text="@string/arrow"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button1"
            android:onClick="onButtonsClick"
            android:text="1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:onClick="onButtonsClick"
            android:text="2"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button3"
            android:onClick="onButtonsClick"
            android:text="3"
            android:textSize="18sp" />

        <Button
            android:id="@+id/compute_button"
            android:layout_width="411dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_result_2s"
            android:onClick="onButtonsClick"
            android:scaleType="centerCrop"
            android:scrollbarSize="4dp"
            android:text="="
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/button0"
            android:onClick="onButtonsClick"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/button_dot"
            android:onClick="onButtonsClick"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/percents_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"

            android:background="@drawable/procent_summ_selector_xml"
            android:clickable="true"
            android:onClick="onButtonsClick"
            android:text="Проценты"
            android:textColor="#00FFFFFF" />
    </LinearLayout>

</LinearLayout>





